{
  "type": "index",
  "spec": {
    "dataSchema": {
      "dataSource": "receipt",
      "parser": {
        "type": "string",
        "parseSpec": {
          "format": "csv",
          "timestampSpec": {
            "column": "dateTime",
            "format": "M/d/YY HH:mm:ss"
          },
          "dimensionsSpec": {
            "dimensions": [
              {
                "name": "number",
                "type": "long"
              },
              "nameDepartmentStore",
              "idDepartmentStore",
              "overNumberCashRegister",
              "nameEmployee",
              "idEmployee"
            ]
          },
          "hasHeaderRow": true
        }
      },
      "metricsSpec": [
        {
          "type": "floatSum",
          "name": "sumReceiptDetail",
          "fieldName": "sumReceiptDetail",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "discountSum",
          "fieldName": "discountSum",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "sumVATReceiptDetail",
          "fieldName": "sumVATReceiptDetail",
          "expression": null
        },
        {
          "type": "longSum",
          "name": "countReceiptDetail",
          "fieldName": "countReceiptDetail",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "quantityReceiptDetail",
          "fieldName": "quantityReceiptDetail",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "sumCashPayment",
          "fieldName": "sumCashPayment",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "sumCardPayment",
          "fieldName": "sumCardPayment",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "sumGiftCardPayment",
          "fieldName": "sumGiftCardPayment",
          "expression": null
        },
        {
          "type": "floatSum",
          "name": "sumReceiptDetailGiftCard",
          "fieldName": "sumReceiptDetailGiftCard",
          "expression": null
        }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "DAY",
        "queryGranularity": {
          "type": "none"
        },
        "rollup": false,
        "intervals": null
      },
      "transformSpec": {
        "filter": null,
        "transforms": []
      }
    },
    "ioConfig": {
      "type": "index",
      "firehose": {
        "type" : "local",
        "baseDir" : "<DIRECTORY>",
        "filter" : "<FILE>"
      },
      "appendToExisting": false
    },
    "tuningConfig": {
      "type": "index",
      "targetPartitionSize": 20000000,
      "maxRowsInMemory": 75000,
      "maxTotalRows": 20000000,
      "numShards": null,
      "indexSpec": {
        "bitmap": {
          "type": "concise"
        },
        "dimensionCompression": "lz4",
        "metricCompression": "lz4",
        "longEncoding": "longs"
      },
      "maxPendingPersists": 0,
      "buildV9Directly": true,
      "forceExtendableShardSpecs": true,
      "forceGuaranteedRollup": false,
      "reportParseExceptions": false,
      "pushTimeout": 0,
      "segmentWriteOutMediumFactory": null
    }
  }
}