        id(b) <- idBarcode(i);
    }
    FOR Barcode b = barcode(idBarcode(INTEGER i)) AND Item s = item(TEXT (idItem(i))) DO {
        sku(b) <- s;
        barcode(s) <- b;
        dataDate(b) <- date(i);
    }
    APPLY;
}

