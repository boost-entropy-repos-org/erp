@defineExternalizable(product, VARSTRING[100], ext){
    extIdProduct 'Код' = DATA VARSTRING[100] (Product) IN recognize INDEXED MINCHARWIDTH 10 PREFCHARWIDTH 15;
    extProductId (id) = GROUP AGGR (product) BY extIdProduct (product);
};

EXTEND FORM materials

    FILTERGROUP filters
        FILTER 'Изделие' m IS Product 'F11'
