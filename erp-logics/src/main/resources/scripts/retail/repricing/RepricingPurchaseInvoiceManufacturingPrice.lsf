MODULE RepricingPurchaseInvoiceManufacturingPrice;
                                           
REQUIRE RepricingPurchaseInvoice, PricingManufacturingPrice, PurchaseManufacturingPrice, RepricingManufacturingPrice;

NAMESPACE Repricing;

overExtraValuation(UserRepricingDetail rd, Purchase.InvoiceDetail detail) += ACTION {
    curManufacturingPrice(rd) <- prevPriceB[PriceListType,Sku,Stock,DATETIME](SystemLedgerPriceListType.manufacturingPriceStockPriceListType, sku(detail), customerStock(detail), dateTime(detail));
    manufacturingPrice(rd) <- manufacturingPrice(detail);
}

overExtraRevertValuation(UserRepricingDetail rd, Purchase.InvoiceDetail detail) += ACTION {
    curManufacturingPrice(rd) <- manufacturingPrice(detail);
    manufacturingPrice(rd) <- manufacturingPrice(detail);
}
