MODULE DiscountCardInput;

REQUIRE DiscountCard;


defaultDiscountLegalEntityGroup  = DATA LegalEntityGroup ();
nameDefaultDiscountLegalEntityGroup 'Группа организация по умолчанию' = name(defaultDiscountLegalEntityGroup());

EXTEND FORM options 
    PROPERTIES nameDefaultDiscountLegalEntityGroup();
    
DESIGN options {
    discountCards {
        MOVE PROPERTY(nameDefaultDiscountLegalEntityGroup());    
    }
}

prevLegalEntity(DiscountCard d) = PREV (legalEntity(d));

add = ACTION (LegalEntity l, DiscountCard disc) {
    legalEntity(disc) <- l;
    ownership(l) <- Ownership.individual;
    legalEntityGroup(l) <- defaultDiscountLegalEntityGroup(); 
}

changeFirstName = ACTION (DiscountCard disc) {
    REQUEST VARSTRING[30] INPUT;

    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    firstName(LegalEntity l) <- requestedString() WHERE l == legalEntity(disc);
    
};

changeLastName = ACTION (DiscountCard disc) {
    REQUEST VARSTRING[30] INPUT;
    
    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    lastName(LegalEntity l) <- requestedString() WHERE l == legalEntity(disc);
};

changeAdress = ACTION (DiscountCard disc) {
    REQUEST VARSTRING[150] INPUT;

    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    dataAddress(LegalEntity l, DATE d) <- requestedString() WHERE l == legalEntity(disc) AND d==currentDate();
};

changeEmail = ACTION (DiscountCard disc) {
    REQUEST VARSTRING[100] INPUT;

    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    email(LegalEntity l) <- requestedString() WHERE l == legalEntity(disc);
};

changePhone = ACTION (DiscountCard disc) {
    REQUEST VARSTRING[100] INPUT;

    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    dataPhone(LegalEntity l, DATE d) <- requestedString() WHERE l == legalEntity(disc) AND d==currentDate();
};

changeBirthday = ACTION (DiscountCard disc) {
    REQUEST DATE INPUT;

    FOR NOT legalEntity(disc) ADDOBJ l = LegalEntity DO add(l, disc);
    
    birthday(LegalEntity l) <- requestedDate() WHERE l == legalEntity(disc);
};

FORM discoundCardInput 'Ввод анкет дисконтных карт'

    OBJECTS d = DiscountCard
    PROPERTIES (d) number READONLY, series READONLY, id SHOWIF showIDs() READONLY, idLegalEntity
    PROPERTIES (d) firstNameContact ON CHANGE changeFirstName(d), lastNameContact ON CHANGE changeLastName(d), addressLegalEntity ON CHANGE changeAdress(d),
                   emailLegalEntity ON CHANGE changeEmail(d), phoneLegalEntity ON CHANGE changePhone(d), birthdayContact ON CHANGE changeBirthday(d)
    FILTERGROUP noneLE
        FILTER 'Нет держателя' NOT prevLegalEntity(d) DEFAULT
;

NAVIGATOR {
    retailDashboardNavigator {
        ADD discoundCardInput;
    }
}