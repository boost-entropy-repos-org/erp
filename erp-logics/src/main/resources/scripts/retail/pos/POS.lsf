        MOVE PROPERTY(series) { minimumCharWidth = 3; caption = 'Серия'; font = 'bold 72'; }
    }
}

inputDiscountCardNumber 'Ввести номер'(Receipt receipt) = ACTION {
    FORM inputDiscountCardNumberReceipt MODAL;
