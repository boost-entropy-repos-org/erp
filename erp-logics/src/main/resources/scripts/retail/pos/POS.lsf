// Дисконтные карты

overChangeBarcodeDiscountCard(VARSTRING[15] string, Receipt receipt) = ACTION {
    IF discountString(string) AND receipt IS Receipt AND string IS VARSTRING[15] AND NOT consumedChangeBarcodeSaleReceipt() THEN {
        IF dateTo(discountString(string)) < date(receipt) THEN
            MESSAGE 'Закончился срок действия карты'
        ELSE
            discountCard(receipt) <- discountString(string); 
            consumedChangeBarcodeSaleReceipt() <- TRUE;
    }
} TOOLBAR;

overChangeBarcodeSale(VARSTRING[15] string, Receipt receipt) += ACTION overChangeBarcodeDiscountCard(string, receipt);

FORM inputDiscountCardNumberReceipt 'Ввод номера дисконтной карты'
    OBJECTS (n = VARSTRING[28], s = STRING[2]) FIXED PANEL
    PROPERTIES number = OBJVALUE(n), series = OBJVALUE(s)
;

