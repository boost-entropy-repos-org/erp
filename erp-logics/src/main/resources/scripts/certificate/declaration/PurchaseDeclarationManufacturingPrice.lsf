MODULE PurchaseDeclarationManufacturingPrice;

REQUIRE PurchaseDeclaration, PurchaseManufacturingPrice;

NAMESPACE Purchase;

WHEN SESSION FORMS declaration
    (CHANGED(calcBaseManufacturingPriceUserInvoiceDetail(d)) OR CHANGED(roundConditionPriceListType(manufacturingCalcPriceListTypeInvoiceDetail(d)))) 
        AND NOT CHANGED(manufacturingPriceUserInvoiceDetail(d)) AND NOT skipChangeManufacturingPriceUserInvoiceDetail(d) DO {
        
        updateManufacturingPriceUserInvoiceDetail(d);
    }    
