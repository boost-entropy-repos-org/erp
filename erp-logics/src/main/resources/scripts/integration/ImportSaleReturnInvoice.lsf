MODULE ImportSaleReturnInvoice;

REQUIRE System,
        ImportDocument,
        Item,
        SaleReturnInvoice;

NAMESPACE SaleReturn; 


originalInvoice 'Файл оригинала накладной'  = DATA CUSTOMFILE (Invoice);

saveOriginalInvoice 'Загрузить файл оригинала накладной' (i) = ACTION LOADFILE originalInvoice(i);
openOriginalInvoice 'Просмотреть оригинала накладной' (i) = ACTION OPENFILE originalInvoice(i);

EXTEND FORM userInvoice
    PROPERTIES(i) saveOriginalInvoice, openOriginalInvoice 
;

EXTEND DESIGN userInvoice{
    headerTabbedPane {
        NEW import {
            caption = 'Импорт';
            type = CONTAINERH;
            NEW origin {
                caption = 'Оригинал накладной';
                ADD PROPERTY(saveOriginalInvoice);
                ADD PROPERTY(openOriginalInvoice);            
            }
        }
    }
}

EXTEND FORM invoices
    PROPERTIES(i) FORCE PANEL saveOriginalInvoice, openOriginalInvoice 
;

EXTEND DESIGN invoices{
    actionContainer {
        NEW origin {
            caption = 'Оригинал накладной';
            ADD PROPERTY(saveOriginalInvoice);
            ADD PROPERTY(openOriginalInvoice);            
        }
    }
}



