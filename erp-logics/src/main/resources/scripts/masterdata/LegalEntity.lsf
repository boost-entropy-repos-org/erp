loadDefaultLegalEntityGroup 'Добавить группы организаций'(VARISTRING[100] iname, VARSTRING[100] id) = ACTION {
    FOR NEW lg = LegalEntityGroup DO {
        name(lg) <- iname;
        id(lg) <- id;

    }
}
loadDefaultRecLegalEntityGroup 'Добавить группы организаций (рекурсивно)'(VARISTRING[100] iname, VARSTRING[100] id, VARSTRING[100] idParent) = ACTION {
    FOR NEW lg = LegalEntityGroup DO {
        name(lg) <- iname;
        id(lg) <- id;
        parent(lg) <- legalEntityGroup(idParent);
    }
}

loadDefaultLegalEntityGroups 'Загрузить стандартные группы организаций' () = ACTION ABSTRACT LIST () IN loadDefault;

@implementLoadDefaultData(loadDefaultLegalEntityGroups);