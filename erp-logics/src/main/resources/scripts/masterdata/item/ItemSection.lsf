MODULE ItemSection;

REQUIRE Item, Section;

NAMESPACE Item;

TABLE SectionItem (Section, Item);


dataInSectionItem 'Отм' = DATA BOOLEAN (Section,Item);

dataInSectionSku (section, sku) += dataInSectionItem(section, sku);

EXTEND FORM item
    OBJECTS sec = Section FIXED GRID 
    PROPERTIES dataInSectionItem(sec,i), idSection(sec) READONLY, nameSection(sec) READONLY
;

DESIGN item {
    itemDetail {
        NEW itemSection {
            caption = 'Секция';
            fill = 1;
            MOVE sec.box; 
        }
    }
}
