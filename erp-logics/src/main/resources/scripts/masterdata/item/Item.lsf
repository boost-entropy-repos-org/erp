//-- Для одного объекта: задание значения для групы по-умолчанию (иерархия)
META defineNearestValueCustom(property, caption, type, typeIdentity, object, group)
    data###property###object caption = DATA type (###object);
    data###typeIdentity###property##object caption (object) = typeIdentity(data###property###object(object)) IN group;
    
    levelParent###property###object (object) = GROUP MIN level###object###object(object, parent) IF data###property###object(parent)
                                                                  BY object PERSISTENT;    
    nearestParent###property###object (object) = object###object###level(object, levelParent###property###object(object));
    nearest###property###object (object) = data###property###object( nearestParent###property###object (object));
    property###object (object) =
        OVERRIDE nearest###property###object (object), 
                 data###property###object(object) PERSISTENT;    
    
    typeIdentity###object caption (object) = typeIdentity(property###object(object)) IN group;
END   
META defineNearestValue(property, caption, type, object, group)
    data###property###object caption = DATA type (###object) IN group;
    
    levelParent###property###object (object) = GROUP MIN level###object###object(object, parent) IF data###property###object(parent)
                                                                  BY object PERSISTENT;    
    nearestParent###property###object (object) = object###object###level(object, levelParent###property###object(object));
    nearest###property###object (object) = data###property###object( nearestParent###property###object (object));
    property###object caption (object) =
        OVERRIDE nearest###property###object (object), 
                 data###property###object(object) PERSISTENT IN group;    
    
END  
//-- Для двух объектов: задание значения для групы по-умолчанию (иерархия)
META defineNearestValueCustom(property, caption, type, typeIdentity, objectClass, object, object2Class, object2, group) // Второй объект должен быть группа иерархии
    data###property###object###object2 caption = DATA type (objectClass, object2Class);
    data###typeIdentity###property###object###object2 caption (object, object2) = typeIdentity(data###property###object###object2(object, object2)) IN group;
    
    levelParent###property###object###object2 (object, object2) = GROUP MIN level###object2###object2(object2, parent) IF data###property###object###object2(object, parent)
                                                                  BY object, object2 PERSISTENT;    
    nearestParent###property###object###object2 (object, object2) = object2###object2###level(object2, levelParent###property###object###object2(object, object2));
    nearest###property###object###object2 (object, object2) = data###property###object###object2(object, nearestParent###property###object###object2 (object, object2));
    
    property###object###object2 (object, object2) =
        OVERRIDE nearest###property###object###object2 (object, object2), 
                 data###property###object###object2(object, object2) PERSISTENT;    
    
    typeIdentity###object###object2 caption (object, object2) = typeIdentity(property###object###object2(object, object2)) IN group;
END 
META defineNearestValueCustom(property, caption, type, typeIdentity, object, object2, group)
    @defineNearestValueCustom(property, caption, type, typeIdentity, ###object, object, ###object2, object2, group);
END 

META defineNearestValue(property, caption, type, objectClass, object, object2Class, object2, group) // Второй объект должен быть группа иерархии
    data###property###object###object2 caption = DATA type (objectClass, object2Class) IN group;
    
    levelParent###property###object###object2 (object, object2) = GROUP MIN level###object2###object2(object2, parent) IF data###property###object###object2(object, parent)
                                                                  BY object, object2 PERSISTENT;    
    nearestParent###property###object###object2 (object, object2) = object2###object2###level(object2, levelParent###property###object###object2(object, object2));
    nearest###property###object###object2 (object, object2) = data###property###object###object2(object, nearestParent###property###object###object2 (object, object2));
    
    property###object###object2 caption (object, object2) =
        OVERRIDE nearest###property###object###object2 (object, object2), 
                 data###property###object###object2(object, object2) PERSISTENT IN group;    
END 
META defineNearestValue(property, caption, type, object, object2, group) 
    @defineNearestValue(property, caption, type, ###object, object, ###object2, object2, group);
END     
 
