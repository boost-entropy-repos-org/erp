META defineNearestValueIncludeCustom(property, caption, type, objectClass, object, object2Class, object2, group) // Второй объект должен быть группа иерархии
    TABLE object###object2 (objectClass, object2Class);
 
    @defineNearestValue(property, caption, type, objectClass, object, object2Class, object2, group);

    countRec###property###object###object2 'Кол-во (рек.)' (object, object2)= GROUP SUM 1 IF 
        property###object###object2(object, child) AND isParent###object2###object2(child, parent) 
            BY object, parent PERSISTENT;              
    countData###property###object2##s###object 'Кол-во групп' (object)= GROUP SUM 1 IF 
        data###property###object###object2(object, object2) BY object PERSISTENT;            
            
    in###object###object2 'Доступны' (object, object2)=  countRec###property###object###object2(object, object2) OR (object2 IS object2Class AND object IS objectClass AND NOT countData###property###object2##s###object(object));       
END
META defineNearestValueInclude(property, caption, type, object, object2, group) 
    @defineNearestValueIncludeCustom(property, caption, type, ###object, object, ###object2, object2, group);
END

