@defineItemDefaultValue(packType, 'Упаковка', PackType, namePackType);
@defineItemFilterValue(packType, 'Упаковка', t);

@defineUniteFilterAttributeItem(packType, name, 'упаковка товара', 'упаковки товара', item);
