MODULE DisparityDashboardRepricing;

REQUIRE DisparityDashboard, RepricingLabel, RepricingDisparity, RepricingMachinery;

NAMESPACE Disparity;

createRepricingLabelTransaction 'Распечатать ценники' (Disparity disparity) = ACTION createLabelTransaction (disparityRepricing(disparity)) TOOLBAR;
createSnapshotRepricingLabelTransaction 'Перепечатать ценники' (Disparity disparity) = ACTION createSnapshotLabelTransaction (disparityRepricing(disparity)) TOOLBAR;
createRepricingMachineryPriceTransaction 'Загрузить в оборудование' (Disparity disparity) = ACTION createMachineryPriceTransaction (disparityRepricing(disparity)) TOOLBAR;

EXTEND FORM disparityItemItemDashboard
    PROPERTIES (dis) createRepricingLabelTransaction, createSnapshotRepricingLabelTransaction, createRepricingMachineryPriceTransaction
;    