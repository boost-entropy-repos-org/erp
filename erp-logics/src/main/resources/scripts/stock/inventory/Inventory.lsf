    PROPERTIES(cs,it) READONLY                                quantityPageInventoryDetailCollationSheetSku, quantityBalanceCollationSheetSku, quantityShortageCollationSheetSku
    PROPERTIES(cs,it) READONLY SHOWIF isSkuCollationSheet(cs) pricePageInventoryDetailCollationSheetSku BACKGROUND differentPriceCollationSheetSku(cs, it),
                                                              priceBalanceCollationSheetSku BACKGROUND differentPriceCollationSheetSku(cs, it)
    PROPERTIES(cs,it) READONLY SHOWIF isSkuCollationSheet(cs) sumPageInventoryDetailCollationSheetSku, sumBalanceCollationSheetSku, sumShortageCollationSheetSku
    FILTERS                                                   includeCollationSheetSku(cs, it)
    ORDER BY                                                  nASku

    OBJECTS         bt=Batch
    PROPERTIES(bt)    READONLY SHOWIF isBatchCollationSheet(cs) nameSkuBatch, idBarcodeSkuBatch, nameBatch
    PROPERTIES(cs,bt) READONLY SHOWIF isBatchCollationSheet(cs) quantityPageInventoryDetailCollationSheetBatch, quantityBalanceCollationSheetBatch,
                                                                quantityShortageCollationSheetBatch
    PROPERTIES(cs,bt) READONLY SHOWIF isBatchCollationSheet(cs) pricePageInventoryDetailCollationSheetBatch BACKGROUND differentPriceCollationSheetBatch(cs, bt),
                                                                priceBalanceCollationSheetBatch BACKGROUND differentPriceCollationSheetBatch(cs, bt)
    PROPERTIES(cs,bt) READONLY SHOWIF isBatchCollationSheet(cs) sumPageInventoryDetailCollationSheetBatch, sumBalanceCollationSheetBatch, sumShortageCollationSheetBatch
    FILTERS                                                     includeCollationSheetBatch(cs, bt),
                                                                quantityPageInventoryDetailCollationSheetBatch(cs,bt) OR quantityBalanceCollationSheetBatch(cs,bt)
;

DESIGN inventories FROM DEFAULT {
    NEW topContainer{
        fill = 1;
        type = SPLITV;

        ADD in.box;

        NEW wor {
            fill = 2;
            type = TABBED;

            NEW wor1 {
                caption = 'Товары';
                ADD il.box {
                    caption = 'Товары с недостачей (излишком)';
                }
            }
            NEW wor2 {
                caption = 'Партии';
                ADD ib.box {
                    caption = 'Партии с недостачей (излишком)';
                }
            }
            NEW wor3 {
                caption = 'Описи';
                type = SPLITH;
                ADD li.box;
                NEW wor31 {
                    fill = 2;
                    type = TABBED;
                    ADD i.box;
                    ADD b.box;
                }
            }
            NEW wor4 {
                caption = 'Ведомости';
                type = CONTAINERH;
                ADD cs.box;
                NEW wor41 {
                    fill = 1;
                    type = TABBED;
                    ADD it.box;
                    ADD bt.box;
                }
            }

            NEW documentHistory {
                type = CONTAINERH;
                caption = 'История';
                ADD in.created;
                ADD in.posted;
            }
        }
    }

    ADD functions.box;
}

//------------------- Операция -----------------------//

operationInventory = DATA Operation (Inventory);
nameOperationInventory 'Операция' = nameOperation(operationInventory(i));
idOperationInventory 'ID операции' = idOperation(operationInventory(i)) MINCHARWIDTH 30 PREFCHARWIDTH 40;

operationCollationSheet =  operationInventory(inventoryCollationSheet(collationSheet));
nameOperationCollationSheet 'Операция' (cs) = nameOperation(operationCollationSheet(cs));
idOperationCollationSheet 'ID операции' (cs) = idOperation(operationCollationSheet(cs)) MINCHARWIDTH 30 PREFCHARWIDTH 40;

EXTEND FORM inventory
    PROPERTIES(in) nameOperationInventory
;

EXTEND DESIGN inventory{
    in.documentHeader {
        type = CONTAINERV;
        NEW first {
            type = CONTAINERH;
            ADD PROPERTY(nameOperationInventory(in));  
            ADD PROPERTY(dateInventory(in));
            ADD PROPERTY(timeInventory(in));                              
        }
        NEW second {
            type = CONTAINERH;
            ADD PROPERTY(nameNumeratorInventory(in));
            ADD PROPERTY(numberInventory(in));
            ADD PROPERTY(seriesInventory(in)); 
            ADD PROPERTY(nameStockInventory(in));               
        }        
    }
}
EXTEND FORM inventories
    PROPERTIES(in) READONLY nameOperationInventory BEFORE nameInventory(in)
;

@defineOperationProperty(isBatch, 'По партиям', commonContainer);

@deriveDocumentOperationProperty(inventory, isBatch) ;

typeOfAdditionOperation  = DATA TypeOfAddition (Operation);
nameTypeOfAdditionOperation 'Тип инвентаризации' (o) = staticCaption(typeOfAdditionOperation(o));

@deriveDocumentOperationProperty(inventory, typeOfAddition) ;

EXTEND FORM operation
    PROPERTIES(o) nameTypeOfAdditionOperation
;
EXTEND DESIGN operation {
    commonContainer {
        ADD PROPERTY(nameTypeOfAdditionOperation(o));

    }
}

EXTEND FORM dialogStockInventory
    FILTERS inStockOperation(ts,operationInventory(in)) OR  ts IS Stock AND NOT operationInventory(in)
;

CONSTRAINT includeStockInventory(stock,inventory) AND operationInventory(inventory) AND NOT 
    inStockOperation(stock,operationInventory(inventory))
        MESSAGE 'В инвентаризацию включены склады, которые не включены в операцию';


NAVIGATOR {
     inventoryNavigator {
         ADD inventories;
         ADD inventoryCommittees;
     }
 }
