MODULE PriceStockGroupWarehouse;

REQUIRE PriceListType, Warehouse, PriceListStockGroup;

NAMESPACE PriceList;

//------------------------- Расширяем форму склада -------------------------//

priceStockGroupWarehouse = DATA PriceStockGroup (Warehouse);
namePriceStockGroupWarehouse 'Ценовая группа' (warehouse)= namePriceStockGroup(priceStockGroupWarehouse(warehouse));

priceStockGroupStock(stock) += priceStockGroupWarehouse(stock);

EXTEND FORM warehouse
    PROPERTIES(w)   SHOWIF isCompanyStock(w) namePriceStockGroupWarehouse
;
DESIGN warehouse {
    headerExtraParams{
        ADD PROPERTY(namePriceStockGroupWarehouse(w)) BEFORE PROPERTY(nameRegionStock(w));
    }
}

