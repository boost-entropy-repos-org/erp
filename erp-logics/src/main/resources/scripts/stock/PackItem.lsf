MODULE PackItem;

REQUIRE Item,
        PurchasePack,
        SalePack;

EXTEND DESIGN item {
    itemPrimaryColumn2 {
        ADD i.itemPack {
            columns = 1;
        }
    }
}

overCopyItemBarcode(d, s, i) += ACTION (d, s, i) {
    IF Purchase.packBarcode(s) THEN {
        ASSIGN Purchase.packBarcodeSku(i) <- d;
    }
    IF Sale.packBarcode(s) THEN{
        ASSIGN Sale.packBarcodeSku(i) <- d;
    }
}

