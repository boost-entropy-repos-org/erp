MODULE StockDocumentStore;

REQUIRE StockDocument, Store;



//------------------------- Расширяем форму отдела -------------------------//

@extendStockFormStockDocumentLedger(departmentStore, d);
EXTEND FORM departmentStore
    PROPERTIES(d) SHOWIF isCompanyStock(d) nameCustomUserHeadPersonStock
;
EXTEND FORM departmentStore
    PROPERTIES (d,e) BEFORE deletee isResponsiblePersonStockEmployee, orderResponsiblePersonStockEmployee 
;

DESIGN departmentStore {
    headerRight {
        MOVE d.responsibility {
            type = COLUMNS;
            columns = 1;
        }
    }
}
