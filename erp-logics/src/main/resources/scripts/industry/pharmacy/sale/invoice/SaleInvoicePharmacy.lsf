MODULE SaleInvoicePharmacy;

REQUIRE SaleInvoice, StockPharmacy, ItemPharmacyBy;

NAMESPACE Sale;

seriesPharmacyInvoiceDetail 'Серия лекарственного средства' = seriesPharmacyBatch(batchInvoiceDetail(detail));
seriesPharmacyUserInvoiceDetail 'Серия лекарственного средства' = seriesPharmacyBatch(batchUserInvoiceDetail(detail));

namePharmacyPriceGroupInvoiceDetail 'Тип лекарственного средства' = namePharmacyPriceGroupBatch(batchInvoiceDetail(detail));
namePharmacyPriceGroupUserInvoiceDetail 'Тип лекарственного средства' = namePharmacyPriceGroupBatch(batchUserInvoiceDetail(detail));

nameImportCountryUserInvoiceDetail 'Страна ввоза' = nameImportCountryBatch(batchUserInvoiceDetail(detail)) MINCHARWIDTH 15 PREFCHARWIDTH 15;

EXTEND FORM userInvoice
    PROPERTIES(d) READONLY seriesPharmacyUserInvoiceDetail SHOWIF showSeriesPharmacy() AFTER nameBatchUserInvoiceDetail(d),
                           namePharmacyPriceGroupUserInvoiceDetail SHOWIF showSeriesPharmacy() AFTER nameBatchUserInvoiceDetail(d)                   
;

EXTEND FORM invoices
    PROPERTIES(d) READONLY seriesPharmacyInvoiceDetail SHOWIF showSeriesPharmacy() AFTER nameBatchInvoiceDetail(d),
                           namePharmacyPriceGroupInvoiceDetail SHOWIF showSeriesPharmacy() AFTER nameBatchInvoiceDetail(d)
;
