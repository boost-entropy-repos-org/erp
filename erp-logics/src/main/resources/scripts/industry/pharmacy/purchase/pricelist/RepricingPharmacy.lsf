MODULE RepricingPharmacy;

REQUIRE RepricingPriceDivider, ItemPharmacy;

NAMESPACE Repricing;

blisterAmount 'Кол-во блистеров (в ед.)' (UserRepricingDetail detail) = blisterAmount(sku(detail)) MINCHARWIDTH 3 PREFCHARWIDTH 6;              

EXTEND FORM userRepricing
    PROPERTIES (d) READONLY blisterAmount AFTER shortNameUOMSku(d)    
;

EXTEND FORM repricings
    PROPERTIES (d) READONLY blisterAmount FORCE GRID AFTER shortNameUOMSku(d)    
;              

priceDivider(UserRepricingDetail detail) += blisterAmount(detail);
