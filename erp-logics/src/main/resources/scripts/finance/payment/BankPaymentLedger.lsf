MODULE BankPaymentLedger;

REQUIRE Bank, PaymentLedger;

NAMESPACE Bank;

EXTEND CLASS Account : PaymentLedger.Account;

name(Account account) += VARSTRING[30](number(account));
currency(Account account) += currency(account);
legalEntity(Account account) += legalEntity(account);

edit(Account account) += ACTION edit(account);

EXTEND FORM PaymentLedger.accounts
    PROPERTIES(a) READONLY nameBank, addressBank, MFOBank, departmentBank, CBUBank, note
    PROPERTIES() addAccountBank = addAccount TODRAW a FORCE PANEL
;
