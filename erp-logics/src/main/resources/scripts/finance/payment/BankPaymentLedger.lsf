MODULE BankPaymentLedger;

REQUIRE Bank, PaymentLedger;

NAMESPACE Bank;

EXTEND CLASS Account : PaymentLedger.Account;

PaymentLedger.nameAccount(account) += numberAccount(account);
PaymentLedger.currencyAccount(account) += currencyAccount(account);
PaymentLedger.legalEntityAccount(account) += legalEntityAccount(account);

PaymentLedger.editAccount(account) += ACTION editAccount(account);

EXTEND FORM PaymentLedger.accounts
    PROPERTIES(a) READONLY nameBankAccount, addressBankAccount, MFOBankAccount, departmentBankAccount, CBUBankAccount, noteAccount
    PROPERTIES() addAccount TODRAW a FORCE PANEL
;
