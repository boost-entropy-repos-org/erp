MODULE PriceCheckerItem;

REQUIRE Item, PriceCheckerPriceTransaction;

overTitlePriceChecker = ABSTRACT VARISTRING[255] (MachineryPriceTransaction, Barcode);

createAttribute(MachineryPriceTransaction transaction, GroupPriceChecker groupMachinery) += ACTION (transaction, groupMachinery) {
    IF groupMachinery IS GroupPriceChecker THEN
        name(transaction, Barcode barcode) <- (OVERRIDE titleCashRegister(barcode) IF transaction IS MachineryPriceTransaction, overTitlePriceChecker(transaction, barcode)) WHERE in(transaction, barcode);
}