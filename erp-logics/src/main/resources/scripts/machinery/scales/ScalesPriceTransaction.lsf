MODULE ScalesPriceTransaction;

REQUIRE Scales, MachineryPriceTransaction;

NAMESPACE Scales;
// ----------------------------------------- Загрузка в ВУ -------------------------------------- //

CLASS ScalesPriceTransaction 'Загрузка прайса в весы' : MachineryPriceTransaction;
groupScalesScalesPriceTransaction 'Группа весов' = DATA GroupScales (ScalesPriceTransaction);
groupMachineryMachineryPriceTransaction (transaction) += groupScalesScalesPriceTransaction(transaction);

EXTEND FORM groupMachineryInput
    PROPERTIES(m) READONLY FORCE GRID SHOWIF isGroupScales(g)       numberScales
    PROPERTIES(g) READONLY FORCE GRID SHOWIF isGroupScales(g)       nameModelGroupMachinery
;

createMachineryPriceTransactionGroupMachinery (groupMachinery) += ACTION (groupMachinery) {
    IF groupMachinery IS GroupScales THEN
        ADDOBJ ScalesPriceTransaction;
}
