MODULE TerminalItem;

REQUIRE Item, TerminalPriceTransaction;

overTitleTerminal = ABSTRACT VARISTRING[255] (MachineryPriceTransaction, Barcode);

createAttribute(MachineryPriceTransaction transaction, GroupTerminal groupMachinery) += {
    IF groupMachinery IS GroupTerminal THEN
        name(transaction, Barcode barcode) <- (OVERRIDE titleCashRegister(barcode) IF transaction IS MachineryPriceTransaction, overTitleTerminal(transaction, barcode)) WHERE in(transaction, barcode);
}
