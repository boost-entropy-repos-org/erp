MODULE CashRegisterItem;

REQUIRE Item, CashRegisterPriceTransaction;

idSkuGroup (MachineryPriceTransaction machineryPriceTransaction, Barcode barcode) = id[ItemGroup](skuGroup(machineryPriceTransaction, barcode));
overIdSkuGroup (MachineryPriceTransaction machineryPriceTransaction, Barcode barcode) = overId(skuGroup(machineryPriceTransaction, barcode));

overTitleCashRegister = ABSTRACT VARISTRING[255] (MachineryPriceTransaction, Barcode);

createAttribute(MachineryPriceTransaction transaction, GroupCashRegister groupMachinery) += ACTION {
    IF groupMachinery IS GroupCashRegister THEN
        name(transaction, Barcode barcode) <- (OVERRIDE titleCashRegister(barcode) IF transaction IS MachineryPriceTransaction, overTitleCashRegister(transaction, barcode)) WHERE in(transaction, barcode);
}

maxCharactersNameCashRegisterItem 'Максимальное количество знаков в наименовании для касс' = DATA INTEGER ();

EXTEND FORM options
    PROPERTIES() maxCharactersNameCashRegisterItem
;
DESIGN options {
    machinery {
        MOVE PROPERTY(maxCharactersNameCashRegisterItem());
    }
}

CONSTRAINT charLength(titleCashRegister(barcode(Sku item))) > maxCharactersNameCashRegisterItem() 
    MESSAGE 'Максимальное количество знаков в наименовании для касс больше предельного значения';
