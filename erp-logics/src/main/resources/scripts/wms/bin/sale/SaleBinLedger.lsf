MODULE SaleBinLedger;

REQUIRE BinLedger, SaleOperation;

NAMESPACE Sale;

@defineOperationProperty(useBins, 'Ячейки', showContainer);

inBin 'Ячейка (в)' = DATA Bin (Operation, Stock);
nameInBin 'Ячейка (в)' (Operation operation, Stock stock) = name(inBin(operation, stock)) MINCHARWIDTH 10 PREFCHARWIDTH 20;

setInBin (Operation operation, Stock stock) = ACTION {
    DIALOG dialogBinStock OBJECTS s = stock, b = inBin(operation, stock) NULL INPUT NULL DO
        inBin(operation, stock) <- b;
}
    
outBin 'Ячейка (из)' = DATA Bin (Operation, Stock);
nameOutBin 'Ячейка (из)' (Operation operation, Stock stock) = name(outBin(operation, stock)) MINCHARWIDTH 10 PREFCHARWIDTH 20;;

setOutBin (Operation operation, Stock stock) = ACTION {
    DIALOG dialogBinStock OBJECTS s = stock, b = outBin(operation, stock) NULL INPUT NULL DO
        outBin(operation, stock) <- b;
}

EXTEND FORM operation
    PROPERTIES(o, sts) nameInBin ON CHANGE setInBin(o, sts), nameOutBin ON CHANGE setOutBin(o, sts)
;

DESIGN operation {
    splitSupplierStockContainer {
        MOVE PROPERTY(nameInBin(o, sts));
        MOVE PROPERTY(nameOutBin(o, sts));
    }
}