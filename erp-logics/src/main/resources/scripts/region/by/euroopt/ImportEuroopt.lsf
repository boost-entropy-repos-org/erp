MODULE ImportEuroopt;

REQUIRE System, Item, ItemDescription, ItemNutrition, ImportUserPriceList, PurchasePack;

importEurooptAction 'Импортировать' = ACTION CUSTOM 'lsfusion.erp.region.by.euroopt.ImportEurooptActionProperty' ();
importEurooptUseTor 'Использовать Tor' = DATA BOOLEAN();
importEurooptSkipKeys 'Не создавать новые товары' = DATA BOOLEAN();
importEurooptItems 'Импортировать товары' = DATA BOOLEAN();
importEurooptUserPriceLists 'Импортировать прайс-листы' = DATA BOOLEAN();

idItemGroupBarcode 'Код группы товаров' (barcode) = idSkuGroup(skuGroupSku(skuBarcode(barcode)));

EXTEND FORM integrationData
    PROPERTIES() importEurooptAction, importEurooptUseTor, importEurooptSkipKeys, importEurooptItems, importEurooptUserPriceLists
;
DESIGN integrationData {
    pane {
        NEW euroopt {
            caption = 'Евроопт';
            ADD PROPERTY(importEurooptAction());
            ADD PROPERTY(importEurooptUseTor());
            ADD PROPERTY(importEurooptSkipKeys());
            ADD PROPERTY(importEurooptItems());
            ADD PROPERTY(importEurooptUserPriceLists());
        }
    }
}