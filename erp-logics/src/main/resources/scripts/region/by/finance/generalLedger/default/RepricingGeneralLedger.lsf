MODULE RepricingGeneralLedger;

REQUIRE GeneralLedger, Repricing, DimensionStock;
NAMESPACE Repricing;

//------------------- Переоценка --------------------//

EXTEND CLASS Repricing : GeneralLedger.GLDocument;
isPosted[GLDocument](Repricing document) += isPosted(document);
name(Repricing document) += description(document);

number[GLDocument](Repricing document) += number(document);
series[GLDocument](Repricing document) += series(document);

dateTime[GLDocument](Repricing document) += dateTime(document);
operation[GLDocument](Repricing document) += operation(document);

//editGLDocument (GLDocument)+= ACTION editInvoice(GLDocument);

////////////////////////////// Обычная переоценка //////////////////////////////////
//-------------------------------- Торговая надбавка ----------------------------------//
//-- Не услуги
@defineGeneralLedgerAggregationOperation (repricing,                                      // основание
                                          RepMark,                                        // идентификатор
                                          legalEntityStock,                               // компания
                                          diffMarkupSumNotChargeRepricingDetail, // сумма
                                          description,                                    // описание
                                          '41.2',                                         // дебет
                                          '42.1',                                         // кредит
                                          'by_default',                                   // идентификатор плана счетов
                                          'by_default_repricing'                          // идентификатор операции
                                          );
debit(RepMarkGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(repricing(generalLedger)) AND dimensionType == DimensionType.stock THEN departmentStore(repricing(generalLedger));
idOperation(RepMarkGeneralLedger l) += '11' IF l IS RepMarkGeneralLedger;    

//-------------------------------- НДС розничный  ----------------------------------//
//-- Тара
@defineGeneralLedgerAggregationOperation (repricing,
                                          RepVATC,
                                          legalEntityStock,
                                          diffVATSumContainerRepricingDetail,
                                          description,
                                          '41.3',
                                          '42.2',
                                          'by_default',
                                          'by_default_repricing'
                                          );
debit(RepVATCGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(repricing(generalLedger)) AND dimensionType == DimensionType.stock THEN departmentStore(repricing(generalLedger));
idOperation(RepVATCGeneralLedger l) += '11' IF l IS RepVATCGeneralLedger;    
//-- Не тара
@defineGeneralLedgerAggregationOperation (repricing,
                                          RepVATNotC,
                                          legalEntityStock,
                                          diffVATSumNotContainerRepricingDetail,
                                          description,
                                          '41.2',
                                          '42.2',
                                          'by_default',
                                          'by_default_repricing'
                                          );
debit(RepVATNotCGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(repricing(generalLedger)) AND dimensionType == DimensionType.stock THEN departmentStore(repricing(generalLedger));
idOperation(RepVATNotCGeneralLedger l) += '11' IF l IS RepVATNotCGeneralLedger;    

//-------------------------------- Сумма поставщика ----------------------------------//
//-- Тара
@defineGeneralLedgerAggregationOperation (repricing,
                                          RepSupC,
                                          legalEntityStock,
                                          diffSumContainerRepricingDetail,
                                          description,
                                          '41.3',
                                          '92.2',
                                          'by_default',
                                          'by_default_repricing'
                                          );
debit(RepSupCGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(repricing(generalLedger)) AND dimensionType == DimensionType.stock THEN departmentStore(repricing(generalLedger));
idOperation(RepSupCGeneralLedger l) += '11' IF l IS RepSupCGeneralLedger;    
//-- Не тара
@defineGeneralLedgerAggregationOperation (repricing,
                                          RepSupNotC,
                                          legalEntityStock,
                                          diffSumNotContainerRepricingDetail,
                                          description,
                                          '41.2',
                                          '92.1',
                                          'by_default',
                                          'by_default_repricing'
                                          );
debit(RepSupNotCGeneralLedger generalLedger,DimensionType dimensionType) += WHEN CLASS(repricing(generalLedger)) AND dimensionType == DimensionType.stock THEN departmentStore(repricing(generalLedger));
idOperation(RepSupNotCGeneralLedger l) += '11' IF l IS RepSupNotCGeneralLedger;    

// ----------------------------------- Стандартные данные ----------------------------------- //

@defineLoadDefaultOperation (Repricing, iname, isid);

loadDefaultOperationsRepricingBy 'Загрузить стандарные операции переоценки товара' () = ACTION () {
    EXEC loadDefaultOperation ('Переоценка товара на магазине', 'by_default_repricing');
} ;

loadDefaultOperations () += ACTION loadDefaultOperationsRepricingBy();

@extendFormGeneralLedgerDocument(repricings, p);