MODULE StoreConsignmentBy;

REQUIRE ConsignmentBy, Store; 

NAMESPACE Consignment;
                                        
EXTEND FORM departmentStore
    PROPERTIES(d) SHOWIF isCompanyStock(d) nameIssuanceAllowedStock, nameIssuanceExecutedStock, nameLoadingExecuterStock, 
                  nameWayOfLoadingStock, nameUnloadingExecuterStock, nameWayOfUnloadingStock, codeLoadingStock,
                  nameConsigmentLegalEntityStock, addressConsigmentLegalEntityStock
;

DESIGN departmentStore {
    headerLeft {
        ADD d.invoiceConsignment AFTER headerExtraParams {
            columns = 3;
            ADD PROPERTY(nameIssuanceAllowedStock(d));
            ADD PROPERTY(nameIssuanceExecutedStock(d));
            ADD PROPERTY(nameLoadingExecuterStock(d));
            ADD PROPERTY(nameWayOfLoadingStock(d));
            ADD PROPERTY(nameUnloadingExecuterStock(d));
            ADD PROPERTY(nameWayOfUnloadingStock(d));
            ADD PROPERTY(codeLoadingStock(d));
            ADD PROPERTY(nameConsigmentLegalEntityStock(d));
            ADD PROPERTY(addressConsigmentLegalEntityStock(d));
        }
    }
}
