MODULE PurchaseOperationStockDocumentBy;

REQUIRE PurchaseOperation, PurchaseShipment, StockDocumentBy;

NAMESPACE Purchase;

captionStockDocumentOperation 'Название операции в товарном отчете (закупка)' = DATA VARISTRING[100] (Operation);
returnCaptionStockDocumentOperation 'Название операции в товарном отчете (возврат)' = DATA VARISTRING[100] (Operation);

StockDocument.captionStockDocumentOperation(operation) += captionStockDocumentOperation(operation);
StockDocument.returnCaptionStockDocumentOperation(operation) += returnCaptionStockDocumentOperation(operation);

EXTEND FORM operation
    PROPERTIES (o) captionStockDocumentOperation, returnCaptionStockDocumentOperation
;

DESIGN operation {
    tabContainer {
        NEW stockDocument {
            caption = 'Товарный отчет';
            MOVE PROPERTY(captionStockDocumentOperation(o));
            MOVE PROPERTY(returnCaptionStockDocumentOperation(o));
        }    
    }
}