MODULE ImportTNVED;

REQUIRE Import, DefaultData;


//---------------------------------------------- Импорт ТНВЭД -----------------------------------------------------//

GROUP tnvedGroup 'ТНВЭД' : public;

importTNVEDClassifierAction 'Импортировать справочник' = ACTION CUSTOM 'fdk.region.by.customs.ImportTNVEDClassifierActionProperty' IN tnvedGroup;
generateTNVEDClassifierAction 'Сгенерировать файл импорта справочника' = ACTION CUSTOM 'fdk.region.by.customs.GenerateTNVEDClassifierActionProperty' IN tnvedGroup;
importTNVEDCustomsRatesAction 'Импортировать платежи' = ACTION CUSTOM 'fdk.region.by.customs.ImportTNVEDCustomsRatesActionProperty' IN tnvedGroup;

EXTEND FORM customsGroups
    PROPERTIES() importTNVEDCustomsRatesAction TODRAW cg TOOLBAR

;

EXTEND FORM defaultData
    PROPERTIES() importTNVEDClassifierAction, generateTNVEDClassifierAction
;

EXTEND DESIGN defaultData {
    pane {
        NEW customs {
            title = 'ТН ВЭД';

            ADD PROPERTY(generateTNVEDClassifierAction);
            ADD PROPERTY(importTNVEDClassifierAction);
        }
    }
}
