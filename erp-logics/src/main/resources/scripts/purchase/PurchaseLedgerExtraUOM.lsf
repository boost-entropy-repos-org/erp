MODULE PurchaseLedgerExtraUOM;

REQUIRE PurchaseLedger, ExtraUOM;

extraQuantity 'Кол-во(ед. поставщика)' = ABSTRACT NUMERIC[16,5] (PurchaseLedger) PERSISTENT INDEXED;
extraUOM = ABSTRACT UOM (PurchaseLedger) PERSISTENT INDEXED;
shortNameExtraUOMSku 'Ед. изм. поставщика' (PurchaseLedger ledger)= shortName(extraUOM(ledger));

EXTEND FORM purchaseLedger
    PROPERTIES(s) READONLY shortNameExtraUOMSku BEFORE shortNameUOMSku(s), extraQuantity BEFORE quantity(s) 
;
