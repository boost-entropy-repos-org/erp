MODULE PurchaseOrderInvoiceDashboard;

REQUIRE OrderInvoiceDashboard, PurchaseInvoiceMachinery, PurchaseShipmentLabel;

NAMESPACE Purchase;

EXTEND FORM orderInvoiceDashboard
    PROPERTIES () addPurchaseUserInvoice= addUserInvoice TODRAW i 
    PROPERTIES(i) statusLabelPriceTransactionDocument  BACKGROUND backgroundPrintLabelTransactionInvoice(i) READONLY FORCE GRID,
              createInvoiceLabelTransaction FORCE PANEL SHOWIF showToPrintLabelTransactionInvoice(i), createSnapshotInvoiceLabelTransaction
              
    PROPERTIES(i) statusMachineryPriceTransactionDocument ON SHORTCUT createSnapshotMachineryPriceTransactionInvoice(i) BACKGROUND backgroundCreateMachineryPriceTransactionInvoice(i) READONLY FORCE GRID,
              createMachineryPriceTransactionInvoice FORCE PANEL SHOWIF showCreateMachineryPriceTransactionInvoice(i)  
                       
;
DESIGN orderInvoiceDashboard {
    PROPERTY(addPurchaseUserInvoice) {caption = 'Закупка';}
    i.panel {
        NEW label {
            caption = 'Дейстия';
            type = CONTAINERH;
            ADD PROPERTY (createInvoiceLabelTransaction(i));
            ADD PROPERTY (createSnapshotInvoiceLabelTransaction(i));            
            ADD PROPERTY (createMachineryPriceTransactionInvoice(i));        
        }

    }
}