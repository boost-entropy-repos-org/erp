MODULE PurchaseOrderInvoiceDashboard;

REQUIRE OrderInvoiceDashboard, PurchaseInvoiceMachinery, PurchaseShipmentLabel;

NAMESPACE Purchase;

EXTEND FORM orderInvoiceDashboard
    PROPERTIES (i) NEWSESSION addPurchaseUserInvoice= NEW[UserInvoice] 
    PROPERTIES(i) statusLabel  BACKGROUND backgroundPrintLabelTransaction(i) READONLY GRID,
              createLabelTransaction PANEL SHOWIF showToPrintLabelTransaction(i), createSnapshotLabelTransaction
              
    PROPERTIES(i) statusMachinery ON SHORTCUT createSnapshotMachineryPriceTransaction(i) BACKGROUND backgroundCreateMachineryPriceTransaction(i) READONLY GRID,
              createMachineryPriceTransaction PANEL SHOWIF showCreateMachineryPriceTransaction(i)  
                       
;
DESIGN orderInvoiceDashboard {
    PROPERTY(addPurchaseUserInvoice) {caption = 'Закупка';}
    i.panel {
        NEW label {
            caption = 'Дейстия';
            type = CONTAINERH;
            MOVE PROPERTY (createLabelTransaction(i));
            MOVE PROPERTY (createSnapshotLabelTransaction(i));            
            MOVE PROPERTY (createMachineryPriceTransaction(i));        
        }

    }
}