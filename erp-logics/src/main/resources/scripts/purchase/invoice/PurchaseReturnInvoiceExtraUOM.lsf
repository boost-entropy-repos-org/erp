MODULE PurchaseReturnInvoiceExtraUOM;

REQUIRE PurchaseReturnInvoice, ExtraUOM, LegalEntityExtraUOM, PurchaseLedgerExtraUOM;

NAMESPACE PurchaseReturn;

extraQuantity 'Кол-во(ед. поставщика)' = ABSTRACT NUMERIC[16,5] (InvoiceDetail) PERSISTENT;
extraQuantity 'Кол-во(ед. поставщика)' = DATA NUMERIC[16,5] (UserInvoiceDetail);
extraQuantity (UserInvoiceDetail invoiceDetail) += extraQuantity(invoiceDetail);

extraUOM = ABSTRACT UOM (InvoiceDetail) PERSISTENT;
extraUOM = DATA UOM (UserInvoiceDetail);
extraUOM (UserInvoiceDetail invoiceDetail) += extraUOM(invoiceDetail);

shortNameExtraUOMSku 'Ед. изм. поставщика' (InvoiceDetail detail)= shortName(extraUOM(detail));
shortNameExtraUOMSku 'Ед. изм. поставщика' (UserInvoiceDetail detail)= shortName(extraUOM(detail));

WHEN SESSION CHANGED(sku(UserInvoiceDetail detail)) OR CHANGED(supplier(detail)) DO {
    extraUOM(detail) <- extraUOM(supplier(detail), sku(detail));
}

WHEN SESSION CHANGED(extraQuantity(UserInvoiceDetail detail)) AND extraUOM(detail) DO {
    quantity(detail) <- extraQuantity(detail) * coefficient(extraUOM(detail), UOM(sku(detail)));
}

WHEN SESSION CHANGED(quantity(UserInvoiceDetail detail)) AND extraUOM(detail) DO {
    extraQuantity(detail) <- quantity(detail) * coefficient(UOM(sku(detail)), extraUOM(detail));
}

EXTEND FORM userInvoice
    PROPERTIES(d) shortNameExtraUOMSku BEFORE shortNameUOMSku(d), extraQuantity BEFORE quantity(d) 
;

EXTEND FORM invoices
    PROPERTIES(d) READONLY shortNameExtraUOMSku BEFORE shortNameUOMSku(d), extraQuantity BEFORE quantity(d) 
;
