createDeliveryReport 'Создать отчет курьера' (InternetOrder order) = {
    IF NOT countInternetOrders() THEN {
        select(order) <- TRUE;
    } 
    IF countInternetOrders() THEN  {       
    
        NEWSESSION {
            FOR [=GROUP SUM 1 IF select(internetOrder(InternetOrderDetail d)) AND NOT deliveryReport(d) BY supplierStock(d)](Stock stock) NEW r = DeliveryReport DO {
//                FOR (status(InternetOrderDetail detail) == StatusInternetOrderDetail.picked OR status(detail) == StatusInternetOrderDetail.partlyPicked )
//                    AND (status(internetOrder(detail)) == StatusInternetOrder.picked OR status(internetOrder(detail)) == StatusInternetOrder.partlyPicked)
//                    AND NOT deliveryReport(detail) AND select(internetOrder(detail)) DO {
                FOR supplierStock(InternetOrderDetail detail) == stock AND select(internetOrder(detail)) AND NOT deliveryReport(detail) DO {
                    deliveryReport(detail) <- r;                        
                }
                SHOW deliveryReport OBJECTS r = r MANAGESESSION DOCKED NOCANCEL;
            }
        }        
        select(InternetOrder o) <- NULL;
    } ELSE {
        MESSAGE 'Вначале необходимо отметить интернет заказы.';
    }
}


