        BY internetOrder(detail);

CLASS Contractor 'Контрагент';
TABLE contractor(Contractor);

legalEntity = DATA LegalEntity (Contractor);
nameLegalEntity 'Наименование' (Contractor c) = name(legalEntity(c));
id 'Код' (Contractor c) = id(legalEntity(c));

site 'Сайт' = DATA VARSTRING[100] (Contractor);

FORM contractor 'Контрагент'
    OBJECTS c = Contractor PANEL
    PROPERTIES(c) id, nameLegalEntity, site
    
    EDIT Contractor OBJECT c
;

FORM contractors 'Контрагенты'
    OBJECTS c = Contractor
    PROPERTIES(c) READONLY id, nameLegalEntity, site
    PROPERTIES(c) NEWSESSION NEW, EDIT, DELETE 
    
    LIST Contractor OBJECT c
;

contractor 'Контрагент'  = DATA Contractor (InternetOrder);
nameContractor 'Контрагент' (InternetOrder o) = nameLegalEntity(contractor(o)) MINCHARWIDTH 15 PREFCHARWIDTH 20;
siteContractor 'Сайт контрагента' (InternetOrder o) = site(contractor(o));

nameContractor 'Контрагент' (InternetOrderDetail d) = nameContractor(internetOrder(d));
siteContractor 'Сайт контрагента' (InternetOrderDetail d) = siteContractor(internetOrder(d));

contractor (InternetOrderDetail d) = contractor(internetOrder(d));
legalEntity (InternetOrderDetail d) = legalEntity(contractor(d));

defaultContractorInternetOrder = DATA Contractor ();
nameDefaultContractorInternetOrder 'Контрагент для интернет-заказов' = nameLegalEntity(defaultContractorInternetOrder());

EXTEND FORM options
    PROPERTIES() nameDefaultContractorInternetOrder
;

DESIGN options {
    topInternetOrder {
        MOVE PROPERTY(nameDefaultContractorInternetOrder());
    }
}

WHEN SET(imported(InternetOrder o)) AND NOT contractor(o) DO {
    contractor(o) <- defaultContractorInternetOrder();
}

EXTEND FORM internetOrder
    PROPERTIES(o) nameContractor
;

DESIGN internetOrder{
    payment {
        MOVE PROPERTY (nameContractor(o));
    }
}
EXTEND FORM internetOrders
    PROPERTIES(o)  READONLY nameContractor
;


inStockDeliveryReport = GROUP SUM 1 BY supplierStock(InternetOrderDetail detail), deliveryReport(detail); 
supplierStocks 'Склады поставщика' = GROUP CONCAT name(Stock stock) IF inStockDeliveryReport(stock, DeliveryReport deliveryReport), ', '  
                                                                        BY deliveryReport 
                                                                        ORDER name(stock) MINCHARWIDTH 30 PREFCHARWIDTH 40;
filterDeliveryDashboard = ABSTRACT CASE BOOLEAN (InternetOrder);
useFilterDeliveryDashboard = ABSTRACT BOOLEAN ();

filterDelivery (InternetOrder o) = IF useFilterDeliveryDashboard() THEN filterDeliveryDashboard(o) ELSE status(o) == StatusInternetOrder.picked;

FORM deliveryDashboard 'Отчеты курьера'

//    OBJECTS dt = DATE PANEL 
//    PROPERTIES (dt) val = VALUE 
    
    OBJECTS o = InternetOrder 
    PROPERTIES (o) select
    PROPERTIES (o) READONLY isPosted, nameStatus, 
                   nameNumerator, number, series, date, time, nameCurrency, note,
                   deliveryDate, nameInternetCustomer, addressInternetCustomer, phoneInternetCustomer
    PROPERTIES (o) READONLY countInternetOrderDetail, quantityInternetOrderDetail, sumInternetOrderDetail
                  
    PROPERTIES (o) READONLY namePaymentTypeInternetOrder, paymentCashSumInternetOrder, paymentCardSumInternetOrder, paymentERIPSumInternetOrder, paymentDateInternetOrder,
                   numberPaymentDocumentInternetOrder, deliverySumInternetOrder, deliveryTimeFromInternetOrder, deliveryTimeToInternetOrder 
                                                                                                     
    FILTERS filterDashboardDelivery(o),
            filterDelivery(o)
    PROPERTIES createDeliveryReport(o) TOOLBAR           
                   
    OBJECTS d = InternetOrderDetail
    PROPERTIES (d) READONLY index
    PROPERTIES (d) READONLY seriesNumberPicking, idBarcodeSku, idSku, nameSku, shortNameUOMSku, nameBatch, quantity, pickingQuantity, returnQuantity,
                   price, discountPrice, sum, nameSupplierStock,
                   seriesNumber, date, time, nameInternetCustomer, addressInternetCustomer, phoneInternetCustomer         
    ORDER BY index(d)
    FILTERS internetOrder(d) == o 

    OBJECTS r = DeliveryReport LAST
    PROPERTIES(r) READONLY nameStatus, number, series,date, time, supplierStocks, seriesNumberInternetOrders, countInternetOrderDetail, 
                  pickingQuantityInternetOrderDetail, pickingSumInternetOrderDetail
    PROPERTIES(r) NEWSESSION NEW, EDIT, DELETE  
    PROPERTIES (r) PANEL READONLY createdTime, createdNameUser, createdHostnameComputer  
    
    OBJECTS pd = InternetOrderDetail
    PROPERTIES (pd) READONLY indexDeliveryReport 
    PROPERTIES (pd) READONLY seriesNumberPicking, idBarcodeSku, idSku, nameSku, shortNameUOMSku, nameBatch
    PROPERTIES (pd) READONLY pickingQuantity, returnQuantity, price, discountPrice, pickingSum
    PROPERTIES (pd) READONLY seriesNumber, date, time, nameInternetCustomer, addressInternetCustomer, phoneInternetCustomer, nameSupplierStock
    PROPERTIES (pd) NEWSESSION EDIT TOOLBAR           
    ORDER BY indexDeliveryReport(pd) 
    FILTERS deliveryReport(pd)==r       
    
;

DESIGN deliveryDashboard {
    main {
        NEW top {
            fill = 1;
            //MOVE dt.box;
            NEW tabContainer{
                fill =1;
                type = TABBED;
                NEW body {
                    caption = 'Отчеты курьера';
                    fill = 1;
                    type = SPLITV;
                    MOVE o.box;
                    NEW specification {
                        type = TABBED ;
                        fill = 2;
                        NEW specPick{
                            caption = 'Отчеты курьера';
                            fill = 1;
                            type = SPLITH;
                            MOVE r.box;
                            NEW tab {
                                fill = 1;
                                type = TABBED ;
                                MOVE pd.box;
                            }
                        }
                        MOVE d.box{ caption ='Спецификация интернет заказа';}
                    }
                }                          
            }
        }
        MOVE functions.box;
    }    
}

NAVIGATOR {
    eShop {
        ADD deliveryDashboard;
    }
}

filterInternetOrderDateFrom 'Дата с' = DATA LOCAL DATE ();
filterInternetOrderDateFrom (InternetOrderDetail detail) = date(detail) >= filterInternetOrderDateFrom() OR (detail IS InternetOrderDetail AND NOT filterInternetOrderDateFrom());      

filterInternetOrderDateTo 'Дата по' = DATA LOCAL DATE ();
filterInternetOrderDateTo (InternetOrderDetail detail) = date(detail) <= filterInternetOrderDateTo() OR (detail IS InternetOrderDetail AND NOT filterInternetOrderDateTo());    

FORM internetOrderLedger 'Регистр интернет заказов'
    PROPERTIES filterInternetOrderDateFrom(), filterInternetOrderDateTo()
    OBJECTS d = InternetOrderDetail
    PROPERTIES(d) READONLY   indexDeliveryReport, seriesNumber, nameContractor, nameInternetCustomer, 
                             phoneInternetCustomer, addressInternetCustomer, cityInternetCustomer, 
                             seriesNumberPicking, idBarcodeSku, idSku, nameSku, shortNameUOMSku, nameBatch, quantity, pickingQuantity,
                             returnQuantity, price, discountPrice, sum, discountSum, date, deliveryDate, returnDate, paymentDate, deliveryTimeFromInternetOrder, 
                             deliveryTimeToInternetOrder, //bulky, guarantee, 
                             siteContractor
    ORDER BY seriesNumber(d) 
    FILTERS deliveryReport(d),
            filterInternetOrderDateFrom(d),
            filterInternetOrderDateTo(d)
;

DESIGN internetOrderLedger {
    NEW topFilters {
        caption = 'Фильтры';
        type = CONTAINERH; 
        MOVE PROPERTY(filterInternetOrderDateFrom());                                               
        MOVE PROPERTY(filterInternetOrderDateTo());                                               
    }   
    MOVE d.box{
        PROPERTY(seriesNumber(d)){
            caption = 'Номер интернет заказа';
        }    
        PROPERTY(date(d)){
            caption = 'Дата заказа';
        }     
    }  
    MOVE functions.box;
}

NAVIGATOR {
    eShop  {
        ADD internetOrderLedger;
    }
}

WHEN CHANGED (status(DeliveryReport r)) DO {
    IF status(r) == StatusDeliveryReport.delivery THEN {
        status(InternetOrder o) <- StatusInternetOrder.delivery WHERE relation(r, o);
    }

    IF status(r) == StatusDeliveryReport.delivered THEN {
        status(InternetOrder o) <- StatusInternetOrder.delivered WHERE relation(r, o);
    }
}

 