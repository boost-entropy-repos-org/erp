MODULE SalePurchaseCreditNote;

REQUIRE PurchaseCreditNote, SalePurchaseInvoice;

NAMESPACE Sale;

// Галочка по созданию акта расхождения на закупке
@defineDocumentInterfaceProperty (invoice, createCreditNote, 'Акт расхождения (закупка)');

EXTEND FORM userInvoice
    PROPERTIES(i)  SHOWIF createPurchaseInvoice(i) createCreditNote
;

DESIGN userInvoice {
    headerCreateDocuments{
        NEW headerCreateCreditNote {
            caption = 'Акт расхождения (закупка)';
            type = CONTAINERH;
            MOVE PROPERTY(createCreditNote(i));
        }
    }
}

