    (OVERRIDE 1 IF group IS StatisticGroup AND sku IS Sku, factorGroupStaticUOM(unitMeasureStatisticGroup(group), UOMSku(sku))) IF
    isParentStatisticGroupSku(group, sku)
        BY group, stock, date](group, stock, date)/
