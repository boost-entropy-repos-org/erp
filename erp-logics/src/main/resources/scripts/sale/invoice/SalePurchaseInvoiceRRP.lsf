MODULE SalePurchaseInvoiceRRP;

REQUIRE SaleInvoiceRRP, PurchaseInvoiceRRP, SalePurchaseInvoice;

PRIORITY Sale;

//----------------------------------------------------------------------------//

Purchase.showRRPInvoice(invoice) += showRRPInvoice(invoicePurchaseInvoice(invoice));

Purchase.RRPPriceListTypeInvoiceDetail(invoiceDetail) += RRPPriceListTypeInvoiceDetail(invoiceDetailPurchaseInvoiceDetail(invoiceDetail));
Purchase.RRPPriceInvoiceDetail(invoiceDetail) += RRPPriceInvoiceDetail(invoiceDetailPurchaseInvoiceDetail(invoiceDetail));

overFillInvoiceUserInvoiceInvoice (sd, id) += ACTION ASSIGN Purchase.showRRPUserInvoice (sd) <- showRRPInvoice(id);

overFillInvoiceUserInvoiceDetailInvoiceDetail (sd, id) += ACTION ASSIGN Purchase.RRPPriceListTypeUserInvoiceDetail (sd) <- RRPPriceListTypeInvoiceDetail(id);
overFillInvoiceUserInvoiceDetailInvoiceDetail (sd, id) += ACTION ASSIGN Purchase.RRPPriceUserInvoiceDetail (sd) <- RRPPriceInvoiceDetail(id);