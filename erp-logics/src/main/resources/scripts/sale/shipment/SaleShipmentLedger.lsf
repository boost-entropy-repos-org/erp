MODULE SaleShipmentLedger;

REQUIRE SaleShipment;

NAMESPACE Sale;

skipSaleLedger(ledger) += WHEN ledger IS Sale.InvoiceDetail THEN TRUE;

@implementSaleLedger(Shipment, sku, supplierStock);

editSaleLedger (ledger) += ACTION editShipmentDetail(ledger);

operationSaleLedger (ledger) += operationShipmentDetail(ledger);
quantitySaleLedger (ledger) += quantityShipmentDetail(ledger);
VATSaleLedger (ledger) += VATInvoiceDetail(invoiceDetailShipmentDetail(ledger));
priceSaleLedger (ledger) += invoicePriceInvoiceDetail(invoiceDetailShipmentDetail(ledger));
sumSaleLedger (ledger) += invoiceSumInvoiceDetail(invoiceDetailShipmentDetail(ledger));
customerSaleLedger (ledger) += customerShipmentDetail(ledger);
customerStockSaleLedger (ledger) += customerStockShipmentDetail(ledger);
skipSaleLedger (ledger) += WHEN ledger IS Sale.ShipmentDetail THEN skipSaleLedgerOperation(operationShipmentDetail(ledger));
numberDocumentSaleLedger (ledger) += numberShipmentDetail(ledger);
