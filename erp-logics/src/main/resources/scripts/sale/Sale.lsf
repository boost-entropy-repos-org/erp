MODULE Sale;

REQUIRE System, Stock, Dashboard;

NAVIGATOR {
    NEW saleNavigator 'Продажи' AFTER stockNavigator WINDOW toolbar IMAGE '/images/checkout.png' {
        NEW saleSaleNavigator 'Продажи';
        NEW saleReturnNavigator 'Возвраты';
        NEW saleMasterData 'Справочники';
    }
    stockNavigator {
        NEW saleStockNavigator 'Отгрузки' FIRST;
    }
    dashboardNavigator {
        NEW saleDashboardNavigator 'Продажа';
    }
}

EXTEND DESIGN options {
    pane {
        NEW sale  {
            type = CONTAINERV;
            caption = 'Продажи';
        }
    }
}
