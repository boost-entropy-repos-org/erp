                                    </g:HorizontalPanel>
                                </td>
                            </tr>
                            <tr>
                                <td/>
                                <td colspan="2">
                                    <g:HorizontalPanel width="100%" ui:field="noRevisionPanel" visible="false">
                                        <g:Label ui:field="noRevisionSpan"/>
                                    </g:HorizontalPanel>
                                </td>
                            </tr>
                            <tr id="dataRow1">
                                <td align="right" class="{style.numberLabel}">1.</td>
                                <td><g:Label ui:field="lbInCluster" styleName="{style.questionCaption}"/></td>
                                <td><g:ListBox ui:field="bxInCluster" styleName="{style.questionComboBox}"/></td>
                            </tr>
