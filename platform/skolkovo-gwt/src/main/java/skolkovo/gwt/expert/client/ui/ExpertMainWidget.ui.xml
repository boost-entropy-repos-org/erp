                                    <g:HorizontalPanel spacing="5">
                                        <g:Label ui:field="logoutNotice" styleName="{style.logoutNotice}"/>
                                        <g:Anchor href="javascript:;" ui:field="logoutLink" styleName="{style.logoutNotice}"/>
                                    </g:HorizontalPanel>
                                </td>
                            </tr>
                            <tr>
                                <td align="right"><b><span ui:field="dateLabelSpan"/></b></td>
