<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>
    <rule>
        <from>^/configurations/\d+/(dispatch|form\.jsp|login\.jsp|login_check|logout).*$</from>
        <to last="true">-</to>
    </rule>

    <rule>
        <from>.*nocache.*</from>
        <set type="response-header" name="Cache-Control">public, max-age=0, must-revalidate</set>
        <set type="expires">1 second</set>
    </rule>
    <rule>
        <from>^/configurations/\d+/(.*nocache.*)$</from>
        <to last="true">/form/$1</to>
    </rule>

    <rule>
        <from>^/configurations/\d+/(.*)$</from>

        <set type="response-header" name="Cache-Control">public, max-age=2592000</set>
        <set type="expires">30 days</set>

        <to>/form/$1</to>
    </rule>

    <rule>
        <from>^/paas/(.*)$</from>
        <set type="response-header" name="Cache-Control">public, max-age=2592000</set>
        <set type="expires">30 days</set>
    </rule>
</urlrewrite>