<assembly>
  <id>prod</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
      <!-- почему-то jasperreports_extension.properties включается в сборку дважды -->
      <dependencySet>
        <excludes>
          <exclude>net.sf.jasperreports:jasperreports</exclude>
          <exclude>org.springframework:*</exclude>
        </excludes>
        <unpack>true</unpack>
      </dependencySet>

      <dependencySet>
        <includes>
          <include>net.sf.jasperreports:jasperreports</include>
        </includes>
        <unpack>true</unpack>
        <unpackOptions>
         <excludes>
           <exclude>jasperreports_extension.properties</exclude>
         </excludes>
        </unpackOptions>
      </dependencySet>

      <dependencySet>
        <includes>
          <include>org.springframework:*</include>
        </includes>
        <unpack>true</unpack>
        <unpackOptions>
         <excludes>
           <exclude>META-INF/spring.schemas</exclude>
           <exclude>META-INF/spring.handlers</exclude>
         </excludes>
        </unpackOptions>
      </dependencySet>
  </dependencySets>
</assembly>