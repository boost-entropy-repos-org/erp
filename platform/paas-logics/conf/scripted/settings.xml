<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="true">

    <context:property-placeholder location="classpath:settings.properties"/>

    <import resource="classpath:settings/common-bl-scripted-settings.xml"/>

    <!-- Other services -->
    <bean id="applicationTerminal" class="paas.terminal.ApplicationTerminalImpl">
        <property name="rmiManager" ref="rmiManager"/>
    </bean>

    <bean id="appManagerNotifier" class="paas.manager.client.AppManagerNotifier">
        <property name="appManagerHost" value="${paas.manager.host}"/>
        <property name="appManagerPort" value="${paas.manager.port}"/>
        <property name="paasConfigurationId" value="${paas.configurationId}"/>
    </bean>

    <util:list id="customLifecycleListeners">
        <ref bean="applicationTerminal"/>
        <ref bean="appManagerNotifier"/>
    </util:list>
</beans>
