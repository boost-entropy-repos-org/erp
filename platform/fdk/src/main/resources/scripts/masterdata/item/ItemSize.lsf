MODULE ItemSize;

REQUIRE System, Item;

NAMESPACE Item;

// Размеры
@defineDoubleItemAttribute(length, NUMERIC[8,2], 'Длина', itemSizeGroup);
@defineItemAttributeBatch (length, 'Длина');
@defineDoubleItemAttribute(width, NUMERIC[8,2], 'Ширина', itemSizeGroup);
@defineItemAttributeBatch (width, 'Ширина');
@defineDoubleItemAttribute(height, NUMERIC[8,2], 'Высота', itemSizeGroup);
@defineItemAttributeBatch (height, 'Высота');
// Объем
@defineDoubleItemAttribute(volume, NUMERIC[9,3], 'Объем', itemSizeGroup);
@defineItemAttributeBatch (volume, 'Объем');
volumeSku(sku) += volumeItem(sku);

overCopyItem(s, d) += ACTION (s, d) {
    SET lengthItem(d) <- lengthItem(s);
    SET widthItem(d) <- widthItem(s);
    SET heightItem(d) <- heightItem(s);
    SET volumeItem(d) <- volumeItem(s);
}